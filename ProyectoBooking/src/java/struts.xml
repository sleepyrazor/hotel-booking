<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        
    </package>
     <package extends="struts-default"  name="login">
        <!-- accion por defecto-->
        <action name="login" >
            <result>/Vistas/login.jsp</result>
        </action>
        <action name="LoginCheck" class="Actions.LoginCheck">
            <result>/Vistas/login.jsp</result> 
            <result name="success">/Vistas/welcome.jsp</result>
            <result name="error">/Vistas/error.jsp</result>
            <result name="input">/Vistas/login.jsp</result>
        </action>
</struts>
